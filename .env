# Virtual Queue Management System - Environment Variables for Docker Desktop
# Copy this file to .env and update the values as needed

# Database Configuration
DB_PASSWORD=VirtualQueue123!
DB_HOST=postgres
DB_PORT=5432
DB_NAME=virtualqueue_prod
DB_USER=virtualqueue_user

# Redis Configuration
REDIS_PASSWORD=Redis123!
REDIS_HOST=redis
REDIS_PORT=6379

# JWT Configuration
JWT_SECRET_KEY=YourSuperSecretKeyThatIsAtLeast32CharactersLong!
JWT_ISSUER=VirtualQueue-Production
JWT_AUDIENCE=VirtualQueueUsers-Production
JWT_EXPIRATION_MINUTES=60

# Email Configuration
SMTP_SERVER=smtp.gmail.com
SMTP_PORT=587
SMTP_USERNAME=noreply@virtualqueue.com
SMTP_PASSWORD=your-app-password
FROM_EMAIL=noreply@virtualqueue.com
FROM_NAME=Virtual Queue System

# SMS Configuration (Twilio)
SMS_PROVIDER=Twilio
SMS_API_KEY=your-twilio-api-key
SMS_API_SECRET=your-twilio-api-secret
SMS_FROM_NUMBER=+1234567890

# WhatsApp Configuration (Twilio)
WHATSAPP_PROVIDER=Twilio
WHATSAPP_API_KEY=your-twilio-api-key
WHATSAPP_API_SECRET=your-twilio-api-secret
WHATSAPP_FROM_NUMBER=+1234567890

# Rate Limiting
RATE_LIMIT_PER_MINUTE=100
RATE_LIMIT_BURST=200

# CORS Configuration
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:8080,http://localhost:80

# Backup Configuration
BACKUP_STORAGE_PROVIDER=Local
BACKUP_STORAGE_PATH=/backups

# Grafana Configuration
GRAFANA_PASSWORD=admin123

# Alert Configuration
DEFAULT_ALERT_EMAIL=admin@virtualqueue.com
CRITICAL_ALERT_EMAIL=critical@virtualqueue.com
WARNING_ALERT_EMAIL=ops@virtualqueue.com
INFO_ALERT_EMAIL=info@virtualqueue.com
SECURITY_ALERT_EMAIL=security@virtualqueue.com
BUSINESS_ALERT_EMAIL=business@virtualqueue.com

# SMTP Configuration for Alerts
ALERT_FROM_EMAIL=alerts@virtualqueue.com
SMTP_USERNAME=alerts@virtualqueue.com
SMTP_PASSWORD=your-app-password

# Slack Configuration (Optional)
SLACK_WEBHOOK_URL=https://hooks.slack.com/services/YOUR/SLACK/WEBHOOK

# Security Webhook (Optional)
SECURITY_WEBHOOK_URL=https://your-security-webhook.com/alerts
