{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning",
      "Microsoft.EntityFrameworkCore": "Warning",
      "VirtualQueue": "Information"
    }
  },
  "AllowedHosts": "*",
  "ConnectionStrings": {
    "DefaultConnection": "Host=${DB_HOST:-localhost};Port=${DB_PORT:-5432};Database=${DB_NAME:-virtualqueue_prod};Username=${DB_USER:-virtualqueue};Password=${DB_PASSWORD:-your_secure_password};SSL Mode=Require;Trust Server Certificate=true",
    "Redis": "${REDIS_CONNECTION_STRING:-localhost:6379}"
  },
  "Jwt": {
    "SecretKey": "${JWT_SECRET_KEY:-YourSuperSecretKeyThatIsAtLeast32CharactersLongForProduction!}",
    "Issuer": "${JWT_ISSUER:-VirtualQueue-Production}",
    "Audience": "${JWT_AUDIENCE:-VirtualQueueUsers-Production}",
    "ExpirationMinutes": "${JWT_EXPIRATION_MINUTES:-60}"
  },
  "Email": {
    "SmtpServer": "${SMTP_SERVER:-smtp.gmail.com}",
    "SmtpPort": "${SMTP_PORT:-587}",
    "Username": "${SMTP_USERNAME:-your-email@gmail.com}",
    "Password": "${SMTP_PASSWORD:-your-app-password}",
    "FromEmail": "${FROM_EMAIL:-noreply@virtualqueue.com}",
    "FromName": "${FROM_NAME:-Virtual Queue System}",
    "EnableSsl": true,
    "TimeoutSeconds": 30
  },
  "Sms": {
    "Provider": "${SMS_PROVIDER:-Twilio}",
    "ApiKey": "${SMS_API_KEY:-your-sms-api-key}",
    "ApiSecret": "${SMS_API_SECRET:-your-sms-api-secret}",
    "FromNumber": "${SMS_FROM_NUMBER:-+1234567890}"
  },
  "WhatsApp": {
    "Provider": "${WHATSAPP_PROVIDER:-Twilio}",
    "ApiKey": "${WHATSAPP_API_KEY:-your-whatsapp-api-key}",
    "ApiSecret": "${WHATSAPP_API_SECRET:-your-whatsapp-api-secret}",
    "FromNumber": "${WHATSAPP_FROM_NUMBER:-+1234567890}"
  },
  "RateLimiting": {
    "Enabled": true,
    "RequestsPerMinute": "${RATE_LIMIT_PER_MINUTE:-100}",
    "BurstLimit": "${RATE_LIMIT_BURST:-200}",
    "WindowSizeMinutes": 1
  },
  "Caching": {
    "DefaultExpirationMinutes": 15,
    "JwtBlacklistExpirationMinutes": 60,
    "UserPermissionsExpirationMinutes": 5,
    "QueueDataExpirationMinutes": 2
  },
  "Monitoring": {
    "EnablePrometheus": true,
    "EnableHealthChecks": true,
    "HealthCheckIntervalSeconds": 30,
    "MetricsPath": "/metrics",
    "HealthCheckPath": "/healthz"
  },
  "Security": {
    "EnableCors": true,
    "AllowedOrigins": "${ALLOWED_ORIGINS:-https://yourdomain.com,https://app.yourdomain.com}",
    "EnableHttpsRedirection": true,
    "EnableSecurityHeaders": true,
    "ApiKeyHeaderName": "X-Tenant-Key",
    "JwtHeaderName": "Authorization"
  },
  "BackgroundServices": {
    "QueueProcessor": {
      "Enabled": true,
      "IntervalSeconds": 30,
      "BatchSize": 100
    },
    "NotificationProcessor": {
      "Enabled": true,
      "IntervalSeconds": 60,
      "BatchSize": 50
    },
    "AuditLogProcessor": {
      "Enabled": true,
      "IntervalSeconds": 300,
      "BatchSize": 1000
    }
  },
  "DataRetention": {
    "AuditLogsRetentionDays": 90,
    "QueueEventsRetentionDays": 30,
    "UserSessionsRetentionDays": 7,
    "BackupRetentionDays": 365
  },
  "Backup": {
    "Enabled": true,
    "Schedule": "0 2 * * *",
    "RetentionDays": 30,
    "StorageProvider": "${BACKUP_STORAGE_PROVIDER:-Local}",
    "StoragePath": "${BACKUP_STORAGE_PATH:-/backups}",
    "CompressionEnabled": true
  },
  "Webhooks": {
    "MaxRetryAttempts": 3,
    "RetryDelaySeconds": 30,
    "TimeoutSeconds": 30,
    "SignatureValidationEnabled": true
  },
  "Alerts": {
    "Enabled": true,
    "CooldownMinutes": 15,
    "MaxAlertsPerHour": 10,
    "NotificationChannels": ["Email", "Sms"]
  },
  "Performance": {
    "MaxConcurrentRequests": 1000,
    "RequestTimeoutSeconds": 30,
    "DatabaseCommandTimeoutSeconds": 30,
    "CacheTimeoutSeconds": 300
  }
}
